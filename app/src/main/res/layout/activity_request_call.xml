            <TextView
                android:id="@+id/txt_camera"
                android:layout_width="wrap_content"
                android:text="From camera"
                android:layout_gravity="top|end"
                android:textColor="#fff"
                android:layout_margin="16dp"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </RelativeLayout>

