<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call2"
    tools:context=".views.ReceivedPhoneCall">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/iv_calling_user_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_user_calling_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Test"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="@string/voice_call"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/slide_view"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="50dp"
            android:rotation="-90">

            <ImageView
                android:id="@+id/double_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_double_arrow"
                android:visibility="gone" />

            <id.ss564.lib.slidingbutton.SlidingButton
                android:id="@+id/slidingButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                app:sliding_button_background="@drawable/answer"
                app:sliding_button_icon="@drawable/flag_transparent"
                app:sliding_text=""

                app:sliding_trackExtendTo="button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/refuse_slide_view"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="bottom"
            android:rotation="-90">

            <ImageView
                android:id="@+id/double_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_double_arrow"
                android:visibility="gone" />

            <id.ss564.lib.slidingbutton.SlidingButton
                android:id="@+id/refuse_slidingButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                app:sliding_button_background="@drawable/refuse"
                app:sliding_button_icon="@drawable/flag_transparent"
                app:sliding_text=""
                app:sliding_trackExtendTo="button" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>