    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webRtcRelativeLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            >

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/surface_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="From PeerConection"
                android:layout_gravity="top|end"
                android:textColor="#fff"
                android:layout_margin="16dp"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            >

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="From camera"
                android:layout_gravity="top|end"
                android:textColor="#fff"
                android:layout_margin="16dp"
                android:layout_height="wrap_content" />
        </FrameLayout>
        </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_calling"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/memo_background_color"
        android:src="@drawable/th"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="15dp"
        android:layout_alignBottom="@+id/image_user_calling"
        android:id="@+id/audio_only_Layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="Someone is calling..."
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:textStyle="bold"
            android:id="@+id/user_name" />


        <ImageButton
            android:id="@+id/rejectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/biv_call"
            android:padding="15dp"
            android:src="@drawable/ic_call_stop" />
        <ImageButton
            android:id="@+id/acceptBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btx_custom"
            android:padding="15dp"
            android:src="@drawable/ic_call_stop" />



    </RelativeLayout>
