<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.responeCallPage.ResponeCallActivity">

        <FrameLayout
            android:id="@+id/remote_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/surface_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="From PeerConection"
                android:visibility="gone"
                android:layout_gravity="top|end"
                android:textColor="#fff"
                android:layout_margin="16dp"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/local_video_view"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:background="@drawable/local_video_call_background"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"



            >

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="From camera"
                android:visibility="gone"
                android:layout_gravity="top|end"
                android:textColor="#fff"
                android:layout_height="wrap_content" />
        </FrameLayout>
<!--        </RelativeLayout>-->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:paddingTop="50dp"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:background="@drawable/background_call"
        android:orientation="vertical"
        android:id="@+id/audio_only_Layout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_calling"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/th"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="Someone is calling..."
            android:layout_marginTop="10dp"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:id="@+id/user_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="Someone is calling..."
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/call_statue" />


        <!-- call only view -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/call_audio_buttons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/mute"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btx_custom"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:src="@drawable/ic_baseline_mic_off_24"
                        android:textColor="@color/white"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        tools:text="user name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/mute"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:id="@+id/liner_hold"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btx_custom"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:src="@drawable/ic_pause_call"
                        android:textColor="@color/white"

                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/hold"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:id="@+id/liner_memo"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btx_custom"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:src="@drawable/ic_memo_icon"
                        android:textColor="@color/white"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/memo"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/liner_add"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btx_custom"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:src="@drawable/ic_add_call"

                        tools:text="user name"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/add"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"

                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/open_close_video"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btx_custom"
                        android:gravity="center_vertical"
                        android:padding="20dp"

                        android:src="@drawable/ic_video_call"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/video"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btx_custom"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:id="@+id/speaker"
                        android:src="@drawable/audio_speaker"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:text="user name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/speaker"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <ImageButton

                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/biv_call"
                android:padding="20dp"
                android:id="@+id/img_button_stop_call"
                android:layout_gravity="center"
                tools:src="@drawable/ic_baseline_call_end_24"
                android:src="@drawable/ic_baseline_call_end_24"
                />
        </LinearLayout>

        <!-- end call only view -->

        <!-- end call only view -->

    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/coordinator"

        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <include layout="@layout/call_bottom_cheet"
          android:id="@+id/call_bottom_cheet" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>





</RelativeLayout>
</layout>