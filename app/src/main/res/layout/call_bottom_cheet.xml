    <LinearLayout
        android:id="@+id/video_rl"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/image_video_call_layout"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background= "@null"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_baseline_videocam_off_24" />



        <ImageButton
            android:id="@+id/image_audio_call_layout"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_gravity="end"
            android:background= "@null"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_baseline_mic_off_24" />
        <ImageButton
            android:id="@+id/image_switch_camera"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background= "@null"

            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_switch_camera" />
        <ImageButton
            android:id="@+id/image_switch_mic"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background= "@null"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/audio_speaker" />

        <ImageButton
            android:id="@+id/close_call_layout"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/biv_call"


            android:src="@drawable/ic_baseline_call_end_24" />


