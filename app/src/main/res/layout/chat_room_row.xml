<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
      <variable
          name="chatRoom"
          type="com.yawar.memo.model.ChatRoomModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/backgroundColor"
        android:foreground="?attr/selectableItemBackground"
        app:cardMaxElevation="5dp"
        android:padding="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/liner_chat_room_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/layout_id">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/th"
                    app:userImage = "@{chatRoom}"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxLength="30"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/textColor"
                        android:text="@string/name"
                        android:textSize="16sp"
                        app:name = "@{chatRoom}"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="3dp"
                            android:src="@drawable/ic_recive_done"
                            app:imageState= "@{chatRoom}"
                            >

                        </ImageView>

                        <ImageView
                            android:id="@+id/img_type"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="3dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_message"
                            app:ImageType = "@{chatRoom}">

                        </ImageView>

                        <TextView
                            android:id="@+id/lastMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:maxLength="30"
                            android:textColor="#808080"
                            android:textSize="14sp"
                            app:lastMessage = "@{chatRoom}"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#808080"
                        android:layout_gravity="end"
                        android:textSize="12sp"
                        app:time = "@{chatRoom}"/>

                    <TextView
                        android:id="@+id/num_message"
                        android:layout_width="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:layout_height="20dp"
                        android:text=""
                        android:background="@drawable/btx_color_green"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                        app:numberMessage = "@{chatRoom}"/>
                </LinearLayout>
            </LinearLayout>

<!--            <include-->
<!--                layout="@layout/item_divider"-->
<!--                android:layout_marginStart="50dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0.2dp"></include>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>